<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Menu"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal"
    android:weightSum="100"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#E3E1E1"
        android:paddingTop="10dp"
        >

        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/cuenta"
            style="@style/botones"
            android:src="@drawable/icono_cuenta"
            android:layout_weight="33.3"
            android:background="#E3E1E1"
            ></ImageButton>
        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/tarjeta"
            style="@style/botones"
            android:src="@drawable/icono_tarjeta"
            android:layout_weight="33.3"
            android:background="#E3E1E1"
            ></ImageButton>
        <ImageButton
            android:foreground="?android:attr/selectableItemBackground"
            android:id="@+id/inversion"
            style="@style/botones"
            android:src="@drawable/icono_inversion"
            android:layout_weight="33.3"
            android:background="#E3E1E1"
            ></ImageButton>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:weightSum="100"
        android:background="#E3E1E1"
        android:paddingBottom="10dp"
        >


        <TextView
            android:id="@+id/textCuenta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:text="@string/cuenta"
            android:textColor="#000000"
            android:textSize="20sp"
            android:gravity="center_horizontal"
            android:background="#E3E1E1"
            />

        <TextView
            android:id="@+id/textTarjeta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:text="@string/tarjeta"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="#E3E1E1"
            android:gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textInversion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="33.3"
            android:text="@string/inversion"
            android:textColor="#000000"
            android:textSize="20sp"
            android:background="#E3E1E1"
            android:gravity="center_horizontal"/>
    </LinearLayout>


</LinearLayout>
